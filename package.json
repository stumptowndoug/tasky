{
  "name": "tasky",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "mcp-server"
  ],
  "scripts": {
    "dev": "next dev -p 3737",
    "dev:open": "next dev -p 3737 & sleep 2 && open http://localhost:3737",
    "build": "next build",
    "start": "next start -p 3737",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "preview": "next build && next start -p 3737",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "mcp:build": "npm run build --workspace=mcp-server",
    "mcp:watch": "npm run watch --workspace=mcp-server",
    "setup": "npm install && npm run mcp:build",
    "setup:mcp": "npm run mcp:build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "jotai": "^2.15.1",
    "lucide-react": "^0.552.0",
    "next": "^16.0.1",
    "next-themes": "^0.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^1.13.2",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@types/node": "^22.13.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.17.7",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3"
  }
}
